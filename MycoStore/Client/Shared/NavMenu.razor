@using Microsoft.AspNetCore.Components.Routing

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MycoStore</a>
        <button class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="nav flex-column">
        <div>
            <button class="btn btn-link nav-link text-start" @onclick="ToggleMushroomMenu">
                Mushrooms @((showMushroomMenu ? "▲" : "▼"))
            </button>

            @if (showMushroomMenu)
            {
                <NavLink class="nav-link ms-3" href="culture" Match="NavLinkMatch.All">Culture</NavLink>
                <NavLink class="nav-link ms-3" href="growbox" Match="NavLinkMatch.All">GrowBox</NavLink>
                <NavLink class="nav-link ms-3" href="drymushroom" Match="NavLinkMatch.All">Dry Mushroom</NavLink>
                <NavLink class="nav-link ms-3" href="tinctureextract" Match="NavLinkMatch.All">Tincture & Extract</NavLink>
            }
        </div>

        <NavLink class="nav-link" href="cart">
            <span class="oi oi-cart" aria-hidden="true"></span> Cart
        </NavLink>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool showMushroomMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    private void ToggleMushroomMenu() => showMushroomMenu = !showMushroomMenu;
}
